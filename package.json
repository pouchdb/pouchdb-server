{
  "name": "pouchdb-server-monorepo",
  "description": "A standalone REST interface server for PouchDB.",
  "version": "0.0.0",
  "homepage": "https://github.com/pouchdb/pouchdb-server",
  "private": true,
  "author": {
    "name": "Nick Thompson",
    "email": "ncthom91@gmail.com"
  },
  "contributors": [
    "Marten de Vries",
    "Nolan Lawson",
    "Garren Smith <garren@redcometlabs.com>"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/pouchdb/pouchdb-server.git"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "npm run bootstrap && ./bin/build.sh",
    "setup-tests": "./bin/test-setup.sh",
    "start": "node ./bin/pouchdb-server",
    "test-pouchdb": "npm run setup-tests && ./bin/test-pouchdb.sh",
    "test-couchdb": "./bin/test-couchdb.sh",
    "eslint": "eslint bin/ packages/ test",
    "test-pouchdb-minimum": "npm run setup-tests && ./bin/test-pouchdb-minimum.sh",
    "test": "npm run test-pouchdb-minimum && npm run test-pouchdb",
    "unit-tests": "./bin/unit-tests.sh",
    "set-version":"node ./bin/set-version.js",
    "build:all-dbs": "cd packages/pouchdb-all-dbs && npm run build",
    "build:auth": "cd packages/pouchdb-auth && npm run build",
    "build:list": "cd packages/pouchdb-list && npm run build",
    "build:replicator": "cd packages/pouchdb-replicator && npm run build",
    "build:rewrite": "cd packages/pouchdb-rewrite && npm run build",
    "build:security": "cd packages/pouchdb-security && npm run build",
    "build:show": "cd packages/pouchdb-show && npm run build",
    "build:update": "cd packages/pouchdb-update && npm run build",
    "build:validation": "cd packages/pouchdb-validation && npm run build",
    "build:vhost": "cd packages/pouchdb-vhost && npm run build"
  },
  "dependencies": {
    "chai-as-promised": "^5.3.0",
    "eslint": "^3.0.1",
    "lerna": "2.0.0-beta.24"
  },
  "devDependencies": {
    "bluebird": "^3.4.1",
    "chai": "^3.5.0",
    "couchdb-harness": "^0.1.6",
    "express": "^4.14.0",
    "extend": "^3.0.0",
    "fs-extra": "^0.30.0",
    "istanbul": "^0.4.2",
    "jsondown": "^0.1.1",
    "locket": "1.0.0",
    "medeadown": "^1.1.1",
    "memdown": "^1.0.0",
    "mocha": "^2.0.1",
    "navigator": "^1.0.1",
    "pouchdb": "^5.2.1",
    "pouchdb-plugin-helper": "^3.0.2",
    "pouchdb-seamless-auth": "^1.0.4",
    "sqldown": "^2.1.0",
    "sqlite3": "^3.0.4",
    "supertest": "^1.2.0"
  }
}
